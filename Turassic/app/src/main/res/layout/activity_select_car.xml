<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:aigestudio="http://schemas.android.com/apk/res-auto"
    tools:context="com.gabri.turassic.activity.SelectCarActivity">

    <com.aigestudio.wheelpicker.WheelPicker
        android:id="@+id/main_wheel_hours"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="200dp"
        android:background="#FFD54F"
        aigestudio:wheel_atmospheric="true"
        aigestudio:wheel_curved="true"
        aigestudio:wheel_cyclic="true"
        aigestudio:wheel_item_text_color="@color/colorPrimary"
        aigestudio:wheel_item_text_size="24sp"
        aigestudio:wheel_selected_item_text_color="@color/colorPrimaryDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.aigestudio.wheelpicker.WheelPicker
        android:id="@+id/main_wheel_min"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginTop="200dp"
        android:background="#FFD54F"
        aigestudio:wheel_atmospheric="true"
        aigestudio:wheel_curved="true"
        aigestudio:wheel_cyclic="true"
        aigestudio:wheel_item_text_color="@color/colorPrimary"
        aigestudio:wheel_item_text_size="24sp"
        aigestudio:wheel_selected_item_text_color="@color/colorPrimaryDark"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hour_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="00"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:typeface="serif"
        app:layout_constraintBottom_toTopOf="@+id/main_wheel_hours"
        app:layout_constraintLeft_toLeftOf="@+id/main_wheel_hours"
        app:layout_constraintRight_toRightOf="@+id/main_wheel_hours" />

    <TextView
        android:id="@+id/min_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="00"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:typeface="serif"
        app:layout_constraintBottom_toTopOf="@+id/main_wheel_min"
        app:layout_constraintLeft_toLeftOf="@+id/main_wheel_min"
        app:layout_constraintRight_toRightOf="@+id/main_wheel_min" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:text="hour"
        app:layout_constraintLeft_toLeftOf="@+id/main_wheel_hours"
        app:layout_constraintRight_toRightOf="@+id/main_wheel_hours"
        app:layout_constraintTop_toBottomOf="@+id/main_wheel_hours" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:text="minute"
        app:layout_constraintLeft_toLeftOf="@+id/main_wheel_min"
        app:layout_constraintRight_toRightOf="@+id/main_wheel_min"
        app:layout_constraintTop_toBottomOf="@+id/main_wheel_min" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="50dp"
        android:text="Please select rental period!"
        android:textSize="18sp"
        android:typeface="serif"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/edittext_bg"
        android:text="submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text=":"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/hour_textView"
        app:layout_constraintRight_toLeftOf="@+id/min_textView"
        app:layout_constraintTop_toTopOf="@+id/hour_textView" />
</android.support.constraint.ConstraintLayout>
