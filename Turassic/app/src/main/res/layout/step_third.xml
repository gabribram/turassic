<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="56dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="3dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="56dp"
        tools:layout_constraintLeft_creator="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editText22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="DRIVING LICENSE NUMBER"
                android:inputType="textPersonName"
                android:singleLine="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/save_button"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintTop_creator="1" />

            <EditText
                android:id="@+id/editText21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="COUNTRY"
                android:inputType="textPersonName"
                android:singleLine="true"
                app:layout_constraintLeft_toRightOf="@+id/editText22"
                app:layout_constraintRight_toRightOf="@+id/editText22"
                app:layout_constraintTop_toBottomOf="@+id/editText22"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <EditText
                android:id="@+id/editText20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="STATE/PROVINCE"
                android:inputType="textPersonName"
                android:singleLine="true"
                app:layout_constraintLeft_toRightOf="@+id/editText21"
                app:layout_constraintRight_toRightOf="@+id/editText21"
                app:layout_constraintTop_toBottomOf="@+id/editText21"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <EditText
                android:id="@+id/editText8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="REGISTER DATE"
                android:inputType="textPersonName"
                android:singleLine="true"
                app:layout_constraintLeft_toRightOf="@+id/editText20"
                app:layout_constraintRight_toRightOf="@+id/editText20"
                app:layout_constraintTop_toBottomOf="@+id/editText20"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="EXPIRE DATE"
                android:inputType="textPersonName"
                android:singleLine="true"
                app:layout_constraintLeft_toRightOf="@+id/editText8"
                app:layout_constraintRight_toRightOf="@+id/editText8"
                app:layout_constraintTop_toBottomOf="@+id/editText8"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DRIIVING LICENSES COPY UPLOAD:"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="FOR INTERNATIONAL USERS ONLY THE FOLLOWING FIELDS ARE REQUIRED:"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="PASSPORT NUMBER"
                android:inputType="textPersonName"
                android:singleLine="true"
                app:layout_constraintLeft_toRightOf="@+id/editText"
                app:layout_constraintRight_toRightOf="@+id/editText"
                app:layout_constraintTop_toBottomOf="@+id/editText"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <EditText
                android:id="@+id/editText17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="COUNTRY"
                android:inputType="textPersonName"
                android:singleLine="true"
                app:layout_constraintLeft_toRightOf="@+id/editText18"
                app:layout_constraintRight_toRightOf="@+id/editText18"
                app:layout_constraintTop_toBottomOf="@+id/editText18"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <EditText
                android:id="@+id/editText16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="STATE/PROVINCE"
                android:inputType="textPersonName"
                android:singleLine="true"
                app:layout_constraintLeft_toRightOf="@+id/editText17"
                app:layout_constraintRight_toRightOf="@+id/editText17"
                app:layout_constraintTop_toBottomOf="@+id/editText17"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <EditText
                android:id="@+id/editText15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="REGISTER DATE"
                android:inputType="textPersonName"
                android:singleLine="true"
                app:layout_constraintLeft_toRightOf="@+id/editText16"
                app:layout_constraintRight_toRightOf="@+id/editText16"
                app:layout_constraintTop_toBottomOf="@+id/editText16"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <EditText
                android:id="@+id/editText14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="EXPIRE DATE"
                android:inputType="textPersonName"
                android:singleLine="true"
                app:layout_constraintLeft_toRightOf="@+id/editText15"
                app:layout_constraintRight_toRightOf="@+id/editText15"
                app:layout_constraintTop_toBottomOf="@+id/editText15"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DRIIVING LICENSES COPY UPLOAD"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/colorPrimaryDark" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/button_bg"
        android:text="save"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />





</android.support.constraint.ConstraintLayout>
